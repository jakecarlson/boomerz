    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.snabbo.boomerz"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Boomerz</name>

    <description>
        The Game of Economics &amp; Party Politics
    </description>

    <author href="http://www.dragoneyedesign.com" email="admin@dragoneyedesign.com">
